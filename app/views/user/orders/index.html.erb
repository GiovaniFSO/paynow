<% if @orders.blank? %>
  <h3>Nenhum pedido efetuado</h3>
<% end %>

<table class="table">
  <thead>
      <th>Produto</th>
      <th>Valor original</th>
      <th>Desconto</th>
      <th>Cliente</th>
      <th>Status</th>
      <th>Data de Vencimento</th>
      <th>Ação</th>
  </thead>
  <tbody>
  <% @orders.each do |order|%>
    <tr>  
      <td><%= order.product.name %></td>
      <td><%= number_to_currency order.product.value %></td>
      <td><%= number_to_percentage(order.product.discount, precision: 2) %></td>
      <td><%= order.customer.name%></td>
      <td><%= order.status %></td>
      <td><%= l order.created_at %></td>
      <td>
        <%= link_to "Visualizar", '#', class: 'visualizar'%>
      </td>
    </tr>
  <%end%>
  </tbody>
</table>
