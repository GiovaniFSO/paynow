  <li class="nav-item">
    <%= link_to "Últimos 30 Dias", user_orders_path(filter: 'last_30_days'), class: "nav-link #{active('last_30_days') }"  %>
  </li>
  <li class="nav-item">
    <%= link_to "Últimos 90 Dias", user_orders_path(filter: 'last_90_days'), class: "nav-link #{active('last_90_days') }"  %>
  </li>
